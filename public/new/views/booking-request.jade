// BEGIN .wrap
.wrap
  // BEGIN .header
  header.header
    .logo
      a.logo__pic(href='#') Polar Tour
    a.link-old-version(href='#') старая версия
    .label.header__region
      .label__title ваш регион
      .label__in
        .label__select
          input.label__text(type='text', value='Москва')
          button.label__btn
    pt-phones
    pt-menu
  // END .header
  // BEGIN .layout
  .layout
    // BEGIN .country
    pt-countries-menu(pt-countries-menu-type="yellow")
    // END .countries
    // BEGIN .container
    .container
      h1.container__title Заявка на бронирование
      // BEGIN .reserve
      .reserve
        .text(ng-bind-html-unsafe="description.description")
      form.reserve__form(name="bookingRequestForm")
        .title информация об агенстве
        .reserve__fields.reserve__fields_border
          .reserve__column
            label.label(class="{{ bookingRequestForm.city.$invalid && bookingRequestForm.city.$dirty && 'label_error'}}")
              .label__title город
              input.label__text(type='text', name="city", ng-model="bookingRequest.city", required)
            label.label.reserve__agency(class="{{ bookingRequestForm.agency.$invalid && bookingRequestForm.agency.$dirty && 'label_error'}}")
              .label__title название агенства
              input.label__text(type='text', name="agency", ng-model="bookingRequest.agency", required)
            label.label.reserve__phone(class="{{ bookingRequestForm.phone.$invalid && bookingRequestForm.phone.$dirty && 'label_error'}}")
              .label__title телефон
              input.label__text(type='text', name="phone", ng-model="bookingRequest.phone", required)
            label.label.reserve__mail(class="{{ bookingRequestForm.email.$invalid && bookingRequestForm.email.$dirty && 'label_error'}}")
              .label__title email
              input.label__text(type='email', name="email", ng-model="bookingRequest.email", required)
            label.label.reserve__address(class="{{ bookingRequestForm.address.$invalid && bookingRequestForm.address.$dirty && 'label_error'}}")
              .label__title адрес
              input.label__text(type='text', name="address", ng-model="bookingRequest.address", required)
        .title заявка на бронирование тура
        .reserve__fields
          .reserve__column.reserve__column_small
            label.label(class="{{ bookingRequestForm.departure.$invalid && bookingRequestForm.departure.$dirty && 'label_error'}}")
              .label__title город отправления
              input.label__text(type='text', name="departure", ng-model="bookingRequest.departure", required)
          .reserve__column.reserve__column_small
            label.label(class="{{ bookingRequestForm.country.$invalid && bookingRequestForm.country.$dirty && 'label_error'}}")
              .label__title страна
              input.label__text(type='text', name="country", ng-model="bookingRequest.country", required)
          .reserve__column.reserve__column_small
            label.label(class="{{ bookingRequestForm.tour.$invalid && bookingRequestForm.tour.$dirty && 'label_error'}}")
              .label__title тур
              input.label__text(type='text', name="tour", ng-model="bookingRequest.tour", required))
        .reserve__fields
          .reserve__column.reserve__column_small
            label.label(class="{{ bookingRequestForm.hotel.$invalid && bookingRequestForm.hotel.$dirty && 'label_error'}}")
              .label__title отель
              input.label__text(type='text', name="hotel", ng-model="bookingRequest.hotel", required)
          .reserve__column.reserve__column_small
            label.label(class="{{ bookingRequestForm.placing.$invalid && bookingRequestForm.placing.$dirty && 'label_error'}}")
              .label__title размещение
              input.label__text(type='text', name="placing", ng-model="bookingRequest.placing", required)
          .reserve__column.reserve__column_small
            .label.reserve__date
              .label__title дата (от и до)
              .label__in
                pt-calendar(ng-model="bookingRequest.dateFrom", name="date")
              .label__dash —
              .label__in
                pt-calendar(ng-model="bookingRequest.dateTo", name="date")
        .reserve__fields.reserve__fields_border
          .reserve__column.reserve__column_small
            .fieldset.reserve__detail
              .label(class="{{ bookingRequestForm.nights.$invalid && bookingRequestForm.nights.$dirty && 'label_error'}}")
                .label__title ночей
                .label__in
                  pt-select(ng-model="bookingRequest.nights", pt-select-values="nights")
              label.label(class="{{ bookingRequestForm.count.$invalid && bookingRequestForm.count.$dirty && 'label_error'}}")
                .label__title ко-ство туристов
                input.label__text(type='text', name="count", ng-model="bookingRequest.count", required)
          .reserve__column.reserve__column_small
            label.label(class="{{ bookingRequestForm.price.$invalid && bookingRequestForm.price.$dirty && 'label_error'}}")
              .label__title цена
              input.label__text(type='text', name="price", ng-model="bookingRequest.price", required)
          .reserve__column.reserve__column_small
            label.label(class="{{ bookingRequestForm.number.$invalid && bookingRequestForm.number.$dirty && 'label_error'}}")
              .label__title № СПО
              input.label__text(type='text', name="number", ng-model="bookingRequest.number", required)
        .title данные туристов
        .reserve__fields.reserve__fields_border
          .data
            button.btn-field.btn-field-add(ng-click="addTourist()")
              i.btn-field-ico
            div(ng-repeat="tourist in bookingRequest.tourists")
              pt-booking-requests-tourist(ng-model="tourist")
        .reserve__fields.reserve__fields_comm
          label.label(class="{{ bookingRequestForm.comment.$invalid && bookingRequestForm.comment.$dirty && 'label_error'}}")
            .label__title ваши комментарии
            textarea.label__textarea(name="comment", ng-model="bookingRequest.comment")
          .btn
            button.btn__item(ng-click="send()") отправить заявку
      // END .reserve
    // END .container
  // END .layout
  // BEGIN .pay-method
  .pay-method
    .title способы оплаты
    ul.pay-method__list
      li.pay-method__item
        a.pay-method__link-1(href='#')
      li.pay-method__item
        a.pay-method__link-2(href='#')
      li.pay-method__item
        a.pay-method__link-3(href='#')
      li.pay-method__item
        a.pay-method__link-4(href='#')
          | Платежные терминалы
          i.pay-method__ico
  // END .pay-method
  // BEGIN .links
  pt-footer-menu
  // END .links
  // BEGIN .systems
  .systems
    .title все наши предложения вы можете найти в системах
    ul.systems__list
      li.systems__item
        a.systems__link-1(href='#')
      li.systems__item
        a.systems__link-2(href='#')
      li.systems__item
        a.systems__link-3(href='#')
      li.systems__item
        a.systems__link-4(href='#')
      li.systems__item
        a.systems__link-5(href='#')
  // END .systems
// END .wrap
