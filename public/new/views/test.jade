// BEGIN .wrap
.wrap
  // BEGIN .header
  header.header
    .logo
      a.logo__pic(href='#') Polar Tour
  // END .header
  // BEGIN .layout
  .layout
    // BEGIN .container
    .container
      h1.container__title Тестовая страница
      // BEGIN .search
      form.search(name="form")
        .search__form
          .search__fields(ng-init="number1.value = 8")
            .label(style="color: white") value: {{ number1.value }} valid: {{ form.number1.$valid }}
            .label.label_mod(ng-class="{label_error: form.number1.$invalid}")
              .label__title number1
              pt-number(ng-model="$parent.number1.value", name="number1", pt-number-min="2", pt-number-max="14")

          .search__fields(ng-init="multiselect1.value = ['a', 'b']; multiselect1.values = ['a', 'b', 'c']")
            .label(ng-class="{label_error: form.multiselect1.$invalid}")
              .label__title multiselect1
              pt-select(pt-select-values="multiselect1.values", pt-select-multiselect, name="multiselect1", ng-model="$parent.multiselect1.value")

          .search__fields(ng-init="checkbox1.value = true")
            .label(style="color: white") value: {{ checkbox1.value }} valid: {{ form.checkbox1.$valid }}
            .label.label_checkbox(ng-class="{label_error: form.checkbox1.$invalid}")
              pt-checkbox(name="checkbox1", ng-model="$parent.checkbox1.value")
              .label__title checkbox1

          .search__fields(ng-init="radioGroup1.value = 'male'; radioGroup1.values = {male: 'Male', female: 'Female'}")
            .label(style="color: white") value: {{ radioGroup1.value }} valid: {{ form.radioGroup1.$valid }}
            .label(ng-class="{label_error: form.radioGroup1.$invalid}")
              .label__title radioGroup1
              pt-radio-group(pt-radio-group-values="radioGroup1.values", name="radioGroup1", ng-model="$parent.radioGroup1.value")

          .search__fields
            .label(style="color: white") value: {{ calendar1.value | date:"dd.MM.yyyy" }} valid: {{ form.calendar1.$valid }}
            .label(ng-class="{label_error: form.calendar1.$invalid}")
              .label__title calendar1
            pt-calendar(ng-model="$parent.calendar1.value", name="calendar1", pt-calendar-min="today", pt-calendar-max="22.09.2013")

          .search__fields(ng-init="datalist1.values = {mow: 'Moscow', nyc: 'New-York'}")
            .label(style="color: white") value: {{ datalist1.value }} valid: {{ form.datalist1.$valid }}
            .label(ng-class="{label_error: form.datalist1.$invalid}")
              .label__title datalist1
              pt-select(ng-model="$parent.datalist1.value", name="datalist1", pt-select-values="datalist1.values", pt-select-datalist)

          .search__fields(ng-init="range1.value = [1, 3]")
            .label(style="color: white") value: {{ range1.value }} valid: {{ form.range1.$valid }}
            .label(ng-class="{label_error: form.range1.$invalid}")
              .label__title range1
              pt-range(ng-model="$parent.range1.value", name="range1")

          .search__fields
            .label(style="color: white") value: {{ range2.value }} valid: {{ form.range2.$valid }}
            .label(ng-class="{label_error: form.range2.$invalid}")
              .label__title range2
              pt-range(ng-model="$parent.range2.value", name="range2", pt-range-min="100", pt-range-max="1000000")

          .search__fields
            .label
              .label__title range3
              pt-range

          .search__fields(ng-init="radio1.value = 2; radio1.values = [1, 2, 3, 4]")
            .label(style="color: white") value: {{ radio1.value }} valid: {{ form.radio1.$valid }}
            .label(ng-class="{label_error: form.radio1.$invalid}")
              .label__title radio1
              pt-select(ng-model="$parent.radio1.value", name="radio1", pt-select-values="radio1.values", pt-select-radio)

          .search__fields(ng-init="radio2.value = 'mow'; radio2.values = {mow: 'Moscow', nyc: 'New-York'}")
            .label(style="color: white") value: {{ radio2.value }} valid: {{ form.radio2.$valid }}
            .label(ng-class="{label_error: form.radio2.$invalid}")
              .label__title radio2
              pt-select(ng-model="$parent.radio2.value", name="radio2", pt-select-values="radio2.values", pt-select-radio)

          .search__fields(ng-init="radio3.values = ['a', 'b', 'c']")
            .label
              .label__title radio3
              pt-select(pt-select-values="radio3.values", pt-select-radio)

          .search__fields(ng-init="select1.value = 7; select1.values = [1, 2, 3, 4, 5, 6, 7, 8, 9]")
            .label(style="color: white") value: {{ select1.value }} valid: {{ form.select1.$valid }}
            .label(ng-class="{label_error: form.select1.$invalid}")
              .label__title select1
              pt-select(ng-model="$parent.select1.value", name="select1", pt-select-values="select1.values")

          .search__fields(ng-init="select2.value = 'mow'; select2.values = {mow: 'Moscow', nyc: 'New-York'}")
            .label(style="color: white") value: {{ select2.value }} valid: {{ form.select2.$valid }}
            .label(ng-class="{label_error: form.select2.$invalid}")
              .label__title select2
              pt-select(ng-model="$parent.select2.value", name="select2", pt-select-values="select2.values")

          .search__fields(ng-init="select3.values = ['a', 'b', 'c']")
            .label
              .label__title select3
              pt-select(pt-select-values="select3.values")
      // END .search
    // END .container
  // END .layout
// END .wrap
