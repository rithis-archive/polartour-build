// BEGIN .wrap
.wrap
  // BEGIN .header
  header.header
    .logo
      a.logo__pic(href='#') Polar Tour
    a.link-old-version(href='#') старая версия
    .label.header__region(ng-controller="PtRegionCtrl")
      .label__title ваш регион
      pt-select(ng-model="$parent.region", pt-select-values="regions")
    pt-phones
    pt-menu
  // END .header
  // BEGIN .layout
  .layout
    // BEGIN .country
    pt-countries-menu(pt-countries-menu-type="yellow")
    // END .countries
    // BEGIN .container
    .container
      h1.container__title Запрос на получение бухгалтерских документов
      // BEGIN .request
      .request
        .request__desc
          .text(ng-bind-html-unsafe="description.description")
        .request__form(ng-show="sent")
          .success
            p Ваш запрос успешно отправлен. Спасибо!
            p
              a(href="#!/") вернуться на главную
        form.request__form(name="documentForm", ng-hide="sent", novalidate="novalidate")
          label.label(ng-class="{label_error: documentForm.email.$invalid && showValidation}")
            .label__title ваш e-mail
            input.label__text(type='email', ng-model="document.email", name="email", required)
          label.label(ng-class="{label_error: documentForm.organization.$invalid && showValidation}")
            .label__title официальное наименование организации
            input.label__text(type='text', ng-model="document.organization", required, name="organization")
          label.label(ng-class="{label_error: documentForm.inn.$invalid && showValidation}")
            .label__title ИНН
            input.label__text(type='text', ng-model="document.inn", required, name="inn")
          label.label(ng-class="{label_error: documentForm.numbers.$invalid && showValidation}")
            .label__title номера заявок
            input.label__text(type='text', ng-model="document.numbers", required, name="numbers")
          label.label(ng-class="{label_error: documentForm.address.$invalid && showValidation}")
            .label__title почтовый адрес с индексом
            input.label__text(type='text', ng-model="document.address", required, name="address")
          .btn
            button.btn__item(ng-click="send()") отправить
      // END .request
    // END .container
  // END .layout
  // BEGIN .pay-method
  .pay-method
    .title способы оплаты
    ul.pay-method__list
      li.pay-method__item
        a.pay-method__link-1(href='#')
      li.pay-method__item
        a.pay-method__link-2(href='#')
      li.pay-method__item
        a.pay-method__link-3(href='#')
      li.pay-method__item
        a.pay-method__link-4(href='#')
          | Платежные терминалы
          i.pay-method__ico
  // END .pay-method
  // BEGIN .links
  pt-footer-menu
  // END .links
  // BEGIN .systems
  .systems
    .title все наши предложения вы можете найти в системах
    ul.systems__list
      li.systems__item
        a.systems__link-1(href='#')
      li.systems__item
        a.systems__link-2(href='#')
      li.systems__item
        a.systems__link-3(href='#')
      li.systems__item
        a.systems__link-4(href='#')
      li.systems__item
        a.systems__link-5(href='#')
  // END .systems
// END .wrap
