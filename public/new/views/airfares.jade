// BEGIN .wrap
.wrap
  // BEGIN .header
  header.header
    .logo
      a.logo__pic(href='#') Polar Tour
    a.link-old-version(href='#') старая версия
    .label.header__region(ng-controller="PtRegionCtrl")
      .label__title ваш регион
      pt-select(ng-model="$parent.region", pt-select-values="regions")
    pt-phones
    pt-menu
  // END .header
  // BEGIN .layout
  .layout
    // BEGIN .country
    pt-countries-menu(pt-countries-menu-type="yellow")
    // END .countries
    // BEGIN .container
    .container
      h1.container__title Справка стоимости А/Б
      // BEGIN .reference
      .reference
        .reference__desc
          .text(ng-bind-html-unsafe="description.description")
        .reference__form(ng-show="sent")
          .success
            p Ваш запрос успешно отправлен. Спасибо!
            p
              a(href="#!/") вернуться на главную
        form.reference__form(name="airfaresForm", ng-hide="sent", novalidate="novalidate")
          .fieldset
            label.label(class="{{ airfaresForm.agency.$invalid && showValidaiton && 'label_error'}}")
              .label__title агентство
              input.label__text(type='text', name="agency", ng-model="airfares.agency", required)
            label.label(class="{{ airfaresForm.phone.$invalid && showValidaiton && 'label_error'}}")
              .label__title телефон агентства
              input.label__text(type='text', name="phone", ng-model="airfares.phone", required)
          .fieldset
            label.label(class="{{ airfaresForm.email.$invalid && showValidaiton && 'label_error'}}")
              .label__title e-mail агентства
              input.label__text(type='email', name="email", ng-model="airfares.email", required)
            label.label(class="{{ airfaresForm.number.$invalid && showValidaiton && 'label_error'}}")
              .label__title номер заявки
              input.label__text(type='text', name="number", ng-model="airfares.number", required)
          .label(class="{{ airfaresForm.tourists.$invalid && showValidaiton && 'label_error'}}")
            .label__title ФИО туристов для которых нужна справка о стоимости А/Б
            pt-airfares-tourists(ng-model="airfares.tourists", name="tourists")
          .btn
            button.btn__item(ng-click="send()") отправить
      // END .reference
    // END .container
  // END .layout
  // BEGIN .pay-method
  .pay-method
    .title способы оплаты
    ul.pay-method__list
      li.pay-method__item
        a.pay-method__link-1(href='#')
      li.pay-method__item
        a.pay-method__link-2(href='#')
      li.pay-method__item
        a.pay-method__link-3(href='#')
      li.pay-method__item
        a.pay-method__link-4(href='#')
          | Платежные терминалы
          i.pay-method__ico
  // END .pay-method
  // BEGIN .links
  pt-footer-menu
  // END .links
  // BEGIN .systems
  .systems
    .title все наши предложения вы можете найти в системах
    ul.systems__list
      li.systems__item
        a.systems__link-1(href='#')
      li.systems__item
        a.systems__link-2(href='#')
      li.systems__item
        a.systems__link-3(href='#')
      li.systems__item
        a.systems__link-4(href='#')
      li.systems__item
        a.systems__link-5(href='#')
  // END .systems
// END .wrap
