.hot__gallery
  position relative
  overflow hidden

  ul
    position absolute
    white-space nowrap
    overflow hidden
  
    li
      list-style none
      display inline-block
      overflow hidden

  .hot__gallery-thumbs
    position absolute
    bottom 10px
    right 25px

    span
      display block
      opacity .75
      width:15px
      height: 15px
      margin-right 4px
      border-radius: 50%
      box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.14) inset
      background: white
      cursor pointer

      &.hot__gallery-thumbs-active
        opacity 1
