.booking_info
  clearfix()

  @media all and (max-width: 767px)
    text-align center

  button
    @media all and (max-width: 1109px)
      float right
      width auto
      padding-left 15px
      padding-right 15px
      margin-bottom 0px

    @media all and (max-width: 767px)
      float none
      margin-right 0px

.booking_info-fields
  @media all and (max-width: 767px)
    clearfix()

.booking_info-field
  @media all and (max-width: 1109px)
    float left
    margin-right 30px

  @media all and (max-width: 767px)
    float right
    margin-right 0px

  &:first-child
    @media all and (max-width: 767px)
      float left

.booking_info-label
  display block
  margin-top 20px
  color white

  @media all and (max-width: 767px)
    text-align left

.booking_info-input
  width 210px - 10px
  padding 5px 0 2px 10px
  border none
  background-color white
  box-shadow inset 0 2px 3px 0 rgba(0, 0, 0, .2)
  font-family Roboto
  font-size 16px
  color #999999

  @media all and (max-width: 767px)
    width 145px - 10px

.block__booking
  @media all and (max-width: 767px)
    display block
    padding 30px 11px
