.content
  clearfix()
  
  .content-block
    float left
    margin-bottom 40px

    input
      width 200px
      padding 5px 0 2px 10px
      box-shadow inset 0 2px 3px 0 rgba(0,0,0,0.2)
      font-family Roboto
      font-size 16px

    .buttons-group a
      padding 7px 12px

    .show-detail-search
      font-size 16px
      margin 30px 0px 0px 8px

    .ui-datepicker-trigger
      float right
      top -31px
      left 4px

  .content-body
    float right
    width 780px
    margin-bottom 15px

  .content-detail
    width 100%
    background #1B8FB5
    padding 10px 0px

    clearfix()

    .content-detail-checkbox-field
      input
        float left
        width auto !important

      label
        float left
        margin-left 5px

    .content-detail-datepicker-field
      input
        width 300px !important

      img
        top -3px

    .content-detail-field
      position relative
      padding 10px 40px 10px 30px

      clearfix()

      .twitter-typeahead
        width 100%

      label
        display block
        color white
        padding-bottom 3px

      .select2-container
        width 100%

      .select2-offscreen
        position absolute
        left 0px

      input, textarea, select
        width 100%
        padding 5px 0 2px 10px
        box-shadow inset 0 2px 3px 0 rgba(0,0,0,0.2)
        font-family Roboto
        font-size 16px

      .editable-select
        width 978px
        margin-right 12px

      .editable-select-button
        position absolute
        top 30px
        width 50px
        margin 0px

      textarea
        height 150px

      button[type="submit"]
        float right
        width 210px
        margin-top 0px

      .content-detail-delete
        display block
        float right
        margin 17px 30px
        padding-bottom 2px

      .image-item
        float left
        background white
        margin 0px 10px 10px 0px
        width 220px
        height 180px
        text-align center
        cursor pointer

        img
          width 220px
          height 180px

        span
          margin-top 80px
          display block
          font-size 14px

    .content-detail-editable-select
      margin-right 50px
      position relative

      .big_button
        position absolute
        top 0px
        right -18px
        width auto
        padding 8px 18px

      .modal
        color white
        font-size 24px

        clearfix()

        input
          margin 20px 0px 60px 0px

        .big_button
          position relative
          top -35px
          right 0px
          margin 0px
          float right

          clearfix()

    .content-detail-separator
      margin 20px 30px
      border-bottom 1px solid white

    .content-detail-container
      padding 10px 40px 10px 30px

      clearfix()

      label
        display block
        margin 10px 0px
        font-size 21px
        color white

      .content-detail-container-body

        clearfix()

        label
          color #333

        .multiple-field
          position relative

          .multiple-field-wrapper
            padding 15px 0px
            background #FFFFCC
            margin-top 10px
            margin-right 80px

        .multiple-field-add
          width 50px
          float right

        .multiple-field-remove
          width 50px
          margin 0px
          position absolute
          top 0px
          right 0px


.content-detail-delete
  display inline-block
  color white
  border-bottom 1px dashed white
  cursor pointer

  &:hover
    color pink
    border-bottom-color pink

.content-block
  .content-detail-delete
    margin-left 70px
