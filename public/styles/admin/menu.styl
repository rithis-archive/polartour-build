.menu-edit
  padding 0px 30px 20px 0px

  .menu-edit-item-up
    width 0
    height 0
    border-left 8px solid transparent
    border-right 8px solid transparent
    border-bottom 8px solid orange
    margin-bottom 8px
    margin-left 23px
    cursor pointer

  .menu-edit-item
    position relative

    .menu-edit-item-wrap
      position relative
      margin-right 60px
      padding 10px
      background #1B8FB5

    clearfix()

    .menu-edit-item-name, .menu-edit-item-href
      width 300px

    .menu-edit-item-name
      margin-left 10px
      margin-right 10px

    .menu-edit-item-href
      float right

    .menu-edit-item-new
      color white

    .menu-edit-item-active
      margin-left 10px

    .menu-edit-item-toggle
      display inline-block
      width 40px
      margin 0px
      text-align center

    .menu-edit-item-remove
      position absolute
      top 10px
      right -50px
      text-align center

      .big_button
        width 40px
        margin 0px
        float right

    .menu-edit-submenu
      margin-left 60px
  
      .menu-edit-submenu-item
        position relative
        padding 10px
        margin-right 60px
        background #1B8FB5
        border-top 1px solid white
  
        .menu-edit-submenu-item-name
          width 290px
          margin-right 10px
  
        .menu-edit-submenu-item-href
          width 300px
          float right
  
        .menu-edit-submenu-item-new
          color white
  
        .menu-edit-submenu-item-remove
          position absolute
          top 10px
          right -50px
          text-align center
    
          .big_button
            width 40px
            margin 0px
            float right
  
      .menu-edit-submenu-add
        text-align center
    
        clearfix()
    
        .big_button
          width 40px
          margin 20px 10px 20px 0px
          float right

.menu-edit-add, .menu-edit-save
  text-align center
  
  clearfix()
  
  .big_button
    width auto
    padding-left 15px
    padding-right 15px
    margin 20px 40px 20px 0px
    float right


