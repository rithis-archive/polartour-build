.modal
  display none
  position absolute
  left 50%
  width 600px
  padding 10px
  margin-left - 300px
  margin-top -50px
  background white
  z-index 5

  box-shadow 0px 8px 10px 2px rgba(0,0,0,0.4)

  .modal-wrapper
    position relative
    padding 30px

    background #1b8fb5

    .modal-close
      position absolute
      top 20px
      right 20px
      text-decoration none
      font-size 21px
      font-weight 700
      color #fff
      width 24px
      height 24px
      image "/images/close-search.png"
