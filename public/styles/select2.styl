.select2-container
  width 210px
  margin 5px 0

  .select2-choice
    height 28px
    padding 0
    border none
    border-radius 0
    background white
    box-shadow inset 0 2px 3px 0 rgba(0, 0, 0, .2)

    div
      width 26px
      height 26px
      border 1px solid white
      border-radius 0
      background orange
      box-shadow inset 0 2px 0px 0 rgba(252, 250, 250, .5)

      b
        image "/images/select2.png"
        background-position 5px 2px

    span
      margin-left 10px

  &.select2-dropdown-open
    .select2-choice
      background #e7e7e7

      div
        width 22px
        height 22px
        margin 2px
        border-color #9b9b9b
        background white

        b
          background-position -15px 0

.select2-search
  margin-top 5px

.select2-drop
  border none
  border-radius 0

.select2-results .select2-highlighted
  background blue

.select2-container-multi .select2-choices .select2-search-choice
  border none
  border-radius 4px
  background #9ACBCA
  color #333333
  font-size 16px
  line-height 19px

  a
    image "/images/close-choise.png"s
    top 8px

