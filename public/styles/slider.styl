
.ui-slider
  height 5px
  position relative
  text-align left
  border none
  border-radius 0px
  background #D4D4D4

.ui-slider
  .ui-slider-range
    position absolute
    z-index 1
    margin 0px
    margin-left 4px
    font-size .7em
    display block
    border: 0
    background-position 0 0
    background #00C4A5

  .ui-slider-handle
    position absolute
    z-index 2
    top 0px
    width 8px
    height 14px
    cursor default
    margin-left -4px
    border none
    background none
    border-radius 0px

    image "/images/handle-left.png"

    &:last-child
      image "/images/handle-right.png"
      margin-left 4px
