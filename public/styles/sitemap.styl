padding = 30px

.sitemap
  padding padding
  padding-bottom 0px

  clearfix()

  @media all and (max-width: 1109px)
    padding padding 16px 0px 16px

  @media all and (max-width: 767px)
    display none

.sitemap-block
  float left
  width ((containerWidth - padding * 2) / 4)
  min-height 300px
  margin-bottom 30px

  @media all and (max-width: 1109px)
    width 160px
    margin-right 24px

.sitemap-block-header
  margin-bottom 25px
  font-size 21px
  color #393939

.sitemap-block-link
  display block
  margin 15px 0
  color blue

.sitemap-divider
  clear both
  display block
  margin 50px 0
  border-top 1px solid blue
