.select-travallers
  margin 5px 0
  
  .select-travallers-select
    position relative
    display block
    height 28px
    padding 0px 0px 0px 10px
    border none
    border-radius 0
    background white
    box-shadow inset 0 2px 3px 0 rgba(0, 0, 0, .2)
    line-height 28px
    text-decoration none
    font-size 16px
    color #333333

    div
      width 26px
      height 26px
      border 1px solid white
      border-radius 0
      background orange
      box-shadow inset 0 2px 0px 0 rgba(252, 250, 250, .5)

      display block
      position absolute
      right 0
      top 0

      b
        background url('select2.png') no-repeat 0 1px
        image "/images/select2.png"
        background-position 4px 2px
        display block
        width 100%
        height 100%

  .select-travallers-dropdown
    display none
    position absolute
    z-index 9999
    color #333333
    font-size 13px
    box-shadow 0 4px 5px rgba(0, 0, 0, .15)

    background white
    padding 9px 0px 18px 0px

    .select-travallers-dropdown-item
      float left
      margin-left 21px

      p
        margin-bottom 3px
      a
        display block
        float left
        width 16px
        height 26px
        background #F48526
  
        &:after
          content ""
          image "/images/select2.png"
          width 15px
          height 15px
          position absolute
  
        &.select-travallers-less:after
          transform rotate(90deg)
          background-position 3px -5px  
  
        &.select-travallers-more:after
          transform rotate(-90deg)
          background-position -5px -3px  
  
      input
        display block
        float left
        width 42px
        height 22px
        padding 0px
        color #333333
        font-size 16px
        text-align center

.select-travallers-active
  .select-travallers-select
    background #E7E7E7
    box-shadow inset 0 2px 3px 0 rgba(0, 0, 0, .2)

    div
      background #fff
      border-color #9B9B9B

      b
        background-position -14px 2px

  .select-travallers-dropdown
    display block


