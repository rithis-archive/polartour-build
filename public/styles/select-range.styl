.select-range
  margin 5px 0
  
  .select-range-select
    position relative
    display block
    height 28px
    padding 0px 0px 0px 10px
    border none
    border-radius 0
    background white
    box-shadow inset 0 2px 3px 0 rgba(0, 0, 0, .2)
    line-height 28px
    text-decoration none
    font-size 16px
    color #333333

    input
      border none
      background transparent
      box-shadow none
      padding 0px

    div
      width 26px
      height 26px
      border 1px solid white
      border-radius 0
      background orange
      box-shadow inset 0 2px 0px 0 rgba(252, 250, 250, .5)

      display block
      position absolute
      right 0
      top 0

      b
        background url('select2.png') no-repeat 0 1px
        image "/images/select2.png"
        background-position 4px 2px
        display block
        width 100%
        height 100%

  .select-range-dropdown
    display none
    position absolute
    z-index 9999
    color #333333
    font-size 13px
    box-shadow 0 4px 5px rgba(0, 0, 0, .15)

    background white
    padding 11px 0px 3px 0px

    .select-range-dropdown-values
      margin 12px 10px 7px 10px

      :first-child
        float left

      :last-child
        float right

      clearfix()

    .select-range-slider-wrapper
      margin 0px 10px 0px 10px
      background #d4d4d4

      .select-range-slider-wrapper-inner
        margin-right 10px

.select-range-active
  .select-range-select
    background #E7E7E7
    box-shadow inset 0 2px 3px 0 rgba(0, 0, 0, .2)

    div
      background #fff
      border-color #9B9B9B

      b
        background-position -14px 2px

  .select-range-dropdown
    display block


