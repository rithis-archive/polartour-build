.buttons-group
  margin 10px 0px

  .button
    padding 5px 17px
    font-size 16px
    line-height 19px
    text-decoration none
    background-image linear-gradient(top, #63BDDA, #217FAE)
    border-right 1px solid #2A7C9F
    color white

    &:first-child
      border-radius 13px 0px 0px 13px

    &:last-child
      border-right none
      border-radius 0px 13px 13px 0px

    &:hover
      box-shadow inset 0 1px 0 0 rgba(255, 255, 255, .3)

    &.active
      padding 5px 16px
      background-image linear-gradient(top, #1880B3, #47A3C0)
      box-shadow inset 0 1px 2px 0 rgba(0, 0, 0, .5)
      border-right none
      
