.banners-item
  #galleria-loader
    height 1px !important
  
  .galleria-container
    position relative
    overflow hidden
    background white

  .galleria-container img
    -moz-user-select none
    -webkit-user-select none
    -o-user-select none
  
  .galleria-errors
    display none

  .galleria-stage
    position absolute
    top 0px
    bottom 0px
    left 0px
    right 0px
    overflow hidden

  .galleria-thumbnails
    .galleria-image
      height 16px
      width 16px
      background transparent
      margin 0 5px 0 0
      border-color transparent
      float left
      cursor pointer

    &.active
      opacity 100

    img
      z-index 100
  
  .galleria-counter
    display none !important
  
  .galleria-loader
      background: #000;
      width: 20px;
      height: 20px;
      position: absolute;
      top: 10px;
      right: 10px;
      z-index: 2;
      display: none;
      background: url(classic-loader.gif) no-repeat 2px 2px;
  
  .galleria-info
      display none
  
  .galleria-info-text
      background-color #000
      padding 12px
      display none
      zoom 1
  
  .galleria-info-title
      font bold 12px/1.1 arial,sans-serif
      margin 0
      color #fff
      margin-bottom 7px
  
  .galleria-info-description
      font italic 12px/1.4 georgia,serif
      margin 0
      color #bbb
  
  .galleria-info-close
      width 9px
      height 9px
      position absolute
      top 5px
      right 5px
      background-position -753px -11px
      opacity .5
      cursor pointer
      display none
  
  .notouch .galleria-info-close:hover
      opacity 1
  
  .touch .galleria-info-close:active
      opacity 1
  
  .galleria-info-link
      background-position -669px -5px
      opacity .7
      position absolute
      width 20px
      height 20px
      cursor pointer
      background-color #000
  
  .notouch .galleria-info-link:hover
      opacity 1
      filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=100)')
  
  .touch .galleria-info-link:active 
      opacity 1
      filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=100)')
  
  .galleria-image-nav
      display none
  
  .galleria-image-nav-left,
  .galleria-image-nav-right
      cursor pointer
      width 62px
      height 124px
      position absolute
      left 10px
      z-index 2
      background-position 0 46px
      background rgba(0, 0, 0, 0.3)
  
  .galleria-image-nav-right
      left auto
      right 10px
      background-position -254px 46px
      z-index 2
  
  .notouch .galleria-image-nav-left:hover,
  .notouch .galleria-image-nav-right:hover
      opacity 1
      filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=100)')
  
  .touch .galleria-image-nav-left:active,
  .touch .galleria-image-nav-right:active
      opacity 1
      filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=100)')
  
  .galleria-thumb-nav-left,
  .galleria-thumb-nav-right
      cursor pointer
      display none
      background-position -495px 5px
      position absolute
      left 0
      top 0
      height 40px
      width 23px
      z-index 3
      opacity .8
      filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=80)')
  
  .galleria-thumb-nav-right
      background-position -578px 5px
      border-right none
      right 0
      left auto

  .notouch .galleria-thumb-nav-left:hover,
  .notouch .galleria-thumb-nav-right:hover
    opacity 1
    filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=100)')
    background-color #111
  
  .touch .galleria-thumb-nav-left:active,
  .touch .galleria-thumb-nav-right:active
    opacity 1
    filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=100)')
    background-color #111
  
  .galleria-info-link,
  .galleria-info-close,
  .galleria-image-nav-left,
  .galleria-image-nav-right
      background-image url(classic-map.png)
      background-repeat no-repeat
