input
  padding 5px 0 2px 10px
  box-shadow inset 0 2px 3px 0 rgba(0,0,0,0.2)
  font-family Roboto
  font-size 16px

input.ng-invalid:focus, textarea.ng-invalid:focus, input.ng-invalid.ng-dirty, textarea.ng-invalid.ng-dirty
  background-color pink

input.ng-valid:focus
  background-color lightgreen
