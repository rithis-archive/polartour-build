.wysiwyg table
  margin 30px 0
  border-collapse collapse

.wysiwyg tbody
  border-top 1px dotted #A1D18A
  border-bottom 1px dotted #A1D18A

.wysiwyg tbody tr:hover
  background #FCF7CA

.wysiwyg td, .wysiwyg th
  padding 10px

.wysiwyg th
  color #1A7CA5
  font-weight 500

.wysiwyg p
  margin 20px 0
  line-height 1.3

.wysiwyg hr
  border none
  border-top 1px solid orange

.wysiwyg ol
  list-style decimal

.wysiwyg ul
  list-style disc

.wysiwyg ol, .wysiwyg ul
  margin-left 20px
  margin-top 20px
  margin-bottom 20px

.wysiwyg ol ol, .wysiwyg ul ul
  margin-top 0
  margin-bottom 0

.wysiwyg li
  margin 10px 0

.wysiwyg strong, .wysiwyg b
  font-weight 700

.wysiwyg em, .wysiwyg i
  font-style italic

.wysiwyg blockquote
  background-color #1A7CA5
  color white
  padding 30px

.wysiwyg h1
  font-size 24px
  font-weight bold
  margin 30px 0
  line-height 1.2

.wysiwyg h2
  font-size 20px
  font-weight bold
  margin 20px 0
  line-height 1.2

.wysiwyg h3
  font-weight bold
  margin 15px 0
  line-height 1.2

.wysiwyg pre
  font-family monospace
  margin 20px 0
