.documents
  margin-bottom 30px

  clearfix()

  .documents-form
    float left
    width 510px
    padding 0px 30px 0px 20px

    clearfix()

    .documents-form-field
      input
        width 100%

    .big_button
      float right
      width 220px

  .documents-description
    float right
    width 510px
    padding 0px 20px
    line-height 20px

  @media all and (max-width: 1109px)
    .documents-form
      width 275px
      padding-left 10px
      text-align center

      label
        text-align left

      .big_button
        float none

    .documents-description
      width 410px

  @media all and (max-width: 767px)
    .documents-form
      float none
      width auto
      padding-right 25px

    .documents-description
      float none
      width auto
      margin-bottom 20px
      padding-left 10px
